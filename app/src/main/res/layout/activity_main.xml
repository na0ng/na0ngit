<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:stretchColumns="0,1,2">


    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="10dp">

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="나옹이의 Android 예제"
            android:textColor="#4374D9"
            android:paddingLeft="10dp"
            android:layout_marginTop="20dp"
            android:textSize="20sp"/>
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="30dp">

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Intent"
            android:textColor="#A6A6A6"
            android:textSize="16sp"
            android:paddingLeft="10dp"/>

        <Button
            android:id="@+id/button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onButtonClicked"
            android:text="next"/>

        <Button
            android:id="@+id/button2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onButton2Clicked"
            android:text="mail"/>
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Open API 활용예제"
            android:textColor="#A6A6A6"
            android:textSize="16sp"
            android:paddingLeft="10dp"/>

        <Button
            android:id="@+id/button6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="DUST" />

    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/layoutManager"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:text="Layout Manager"
            android:textColor="#A6A6A6"
            android:textSize="16sp"
            android:paddingLeft="10dp"/>

        <Button
            android:id="@+id/gridButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onGButtonClicked"
            android:text="Grid" />

        <Button
            android:id="@+id/staggeredButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onSButtonClicked"
            android:text="staggere" />
    </TableRow>

    <TableRow>
        <TextView
            android:id="@+id/lifeCycleTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:text="Activity 수명주기"
            android:textColor="#A6A6A6"
            android:textSize="16sp"
            android:paddingLeft="10dp"/>

        <Button
            android:id="@+id/lifeCycleBt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onLCButtonClicked"
            android:text="Life Cycle" />
    </TableRow>

</TableLayout>
