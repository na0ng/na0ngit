<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:stretchColumns="0,1,2">


    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Android example"
            android:textColor="@color/colorAccent"
            android:textSize="24sp"
            app:fontFamily="casual" />
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Intent예제"
            app:fontFamily="casual" />

        <Button
            android:id="@+id/button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onButtonClicked"
            android:text="next"/>

        <Button
            android:id="@+id/button2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onButton2Clicked"
            android:text="mail"/>
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Open API 활용예제"
            app:fontFamily="casual" />

        <Button
            android:id="@+id/button6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="DUST" />

    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/layoutManager"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:text="LayoutManager예제"
            app:fontFamily="casual" />

        <Button
            android:id="@+id/gridButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onGButtonClicked"
            android:text="Grid" />

        <Button
            android:id="@+id/staggeredButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onSButtonClicked"
            android:text="staggere" />
    </TableRow>

    <TableRow>
        <TextView
            android:id="@+id/lifeCycleTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:text="Activity 수명주기"
            app:fontFamily="casual" />

        <Button
            android:id="@+id/lifeCycleBt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onLCButtonClicked"
            android:text="Life Cycle" />
    </TableRow>

</TableLayout>
